<form action="{{ path('dictionary') }}" method="get" autocomplete="off" id="searching-form">
    <div class="search-input-div">
        <input type="text" name="q" placeholder="Wpisz indonezyjskie lub polskie sÅ‚owo" value="{{ app.session.get('q') }}">
        <button type="submit" class="search-submit-btn fas fa-search" title="Szukaj"></button>
    </div>
    <div class="suggestions-div suggestions-hidden {% if app.request.attributes.get('_route') == "main" %} suggestions-div-main {% endif %}">
        <ul class="search-suggestions-ul suggestions-ul">
            <li></li>
        </ul>
    </div>
</form>
{% block javascripts %}
    {{ encore_entry_script_tags('search_suggestions') }}
{% endblock %}
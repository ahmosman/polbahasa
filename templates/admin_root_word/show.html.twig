{% extends 'base.html.twig' %}

{% block title %}Lista podstaw słowotwórczych{% endblock %}
{% block body %}
    <div class="admin-word-list-container-1">
        <div class="search-input-div">
            <input type="text" name="q" placeholder="Znajdź podstawę słowotwórczą" autocomplete="off">
            <a href="{{ path('admin_root_word_add') }}" class="btn btn-darkviolet add-word-btn">Dodaj podstawę</a>
        </div>
        <div class="admin-word-list-container-2">
        <table class="admin-word-table">
            <tr class="header-word-table">
                <th>Podstawa słowotwórcza</th>
                <th>Akcje</th>
            </tr>

            {% for rootWord in rootWords%}
                <tr class="admin-word-tr">
                    <td class="word-name-td">{{ rootWord.name }}</td>
                    <td class="word-action-td">
                        <a href="{{ path('admin_root_word_edit',{name: rootWord.name}) }}" class="btn btn-orchid">Edytuj</a>
                        <a href="{{ path('admin_root_word_delete',{name: rootWord.name}) }}" class="btn btn-danger" onclick="return confirm('Czy na pewno usunąć {{ rootWord.name }}?')">Usuń</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('admin_root_word') }}
{% endblock %}
